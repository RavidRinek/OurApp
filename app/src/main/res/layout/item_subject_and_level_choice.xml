<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:background="@drawable/rec_white_rad_24_stroke_2a59fe"
    android:gravity="right"
    android:orientation="horizontal"
    android:paddingStart="14dp"
    android:paddingTop="11dp"
    android:paddingEnd="14dp"
    android:paddingBottom="11dp"
    android:weightSum="6">

    <CheckBox
        android:id="@+id/cbSelectAll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:backgroundTint="#fff"
        android:buttonTint="#ff3817" />

    <LinearLayout
        android:id="@+id/llLevelContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSubjectThird"
            android:layout_width="44dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginVertical="7dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_style"
            android:gravity="center"
            android:text="תיכון"
            android:textColor="@drawable/set_text_color"
            android:textIsSelectable="false"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSubjectSecond"
            android:layout_width="44dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="17dp"
            android:layout_marginVertical="7dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_style"
            android:gravity="center"
            android:text="חטיבה"
            android:textColor="@drawable/set_text_color"
            android:textIsSelectable="false"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSubjectFirst"
            android:layout_width="44dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginVertical="7dp"
            android:layout_marginRight="17dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_style"
            android:gravity="center"
            android:text="יסודי"
            android:textColor="@drawable/set_text_color"
            android:textIsSelectable="false"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSubject"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawablePadding="12dp"
        android:gravity="center"
        android:text="מתמטיקה"
        android:textColor="#000"
        android:textStyle="bold"
        android:singleLine="true"
        android:width="90dp"
        app:drawableEndCompat="@drawable/ic_student_subjects_main" />

</LinearLayout>