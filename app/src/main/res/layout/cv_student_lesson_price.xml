<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="14dp"
    android:layout_marginEnd="14dp"
    android:background="@drawable/rec_white_rad_24_stroke_2a59fe"
    android:gravity="center_vertical"
    android:layoutDirection="ltr"
    android:orientation="horizontal"
    android:paddingStart="14dp"
    android:paddingEnd="14dp">

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderStudentLessonPrice"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:stepSize="10"
        android:valueFrom="10"
        android:valueTo="250"
        app:thumbColor="#FF3817"
        app:trackColor="#E8EAEC"
        app:trackHeight="6dp" />

    <TextView
        android:id="@+id/tvStudentLessonPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0₪"
        android:textColor="#FF3817"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="12dp"
        android:text="מחיר מקסימלי"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        app:drawableEndCompat="@drawable/ic_student_lesson_price" />
</LinearLayout>