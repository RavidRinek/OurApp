<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSubjectsSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/rec_white_rad_24_stroke_2a59fe"
        android:padding="14dp">

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_orange_down" />

        <TextView
            android:id="@+id/tvSubjectsSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            android:text="השכלה ורקע אקדמאי"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            app:drawableEndCompat="@drawable/cv_teacher_lesson_info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/llInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rec_white_rad_24_stroke_2a59fe"
        android:orientation="vertical"
        android:paddingStart="14dp"
        android:paddingTop="11dp"
        android:paddingEnd="14dp"
        android:paddingBottom="11dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/etSchoolName"
            android:layout_width="match_parent"
            android:hint="שם מוסד ההשכלה"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/etDegreeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שם התואר"
            android:layout_marginTop="12dp"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>