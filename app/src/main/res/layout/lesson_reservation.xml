<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical" >

    <com.our.app.features.phase_one.common.LogoHeaderUtilCustomView
        android:id="@+id/cvLogoHeaderUtil"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subjectOfLesson"
        android:text="אנגלית"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="22dp"
        android:text="פרטי שיעור"
        android:textColor="@color/black"
        android:textSize="27dp"
        android:textStyle="bold" />







   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="רמה: "
                android:layout_gravity="right" />

            <TextView
                android:id="@+id/levelOfClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ourColor"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="יסודי" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="מחיר: "
                android:layout_gravity="right" />

            <TextView
                android:id="@+id/lessonPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ourColor"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="400$" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="מורה: "
                android:layout_gravity="right" />

            <TextView
                android:id="@+id/teachersName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ourColor"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="אני" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="זמן השיעור: "
                android:layout_gravity="right" />

            <TextView
                android:id="@+id/lessonDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ourColor"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="2.10.2023" />

        </LinearLayout>

</LinearLayout>






    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="22dp"
        android:text="פרטי תלמיד"
        android:textColor="@color/black"
        android:textSize="27dp"
        android:textStyle="bold" />

    <com.our.app.features.phase_one.teacherlobby.TeacherCreateInfoCustomView
        android:id="@+id/cvTeacherCreateInfo"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:layout_gravity="center"
        android:layout_margin="24dp" />



    <CheckBox
        android:id="@+id/cbSpinnerSubBranchResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:buttonTint="#FF3817"
        android:textColor="@android:color/black"
        android:text="אני מאשר שהכנסתי את פרטיי הנכונים" />



</LinearLayout>