<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llInfoContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/rec_white_rad_24_stroke_2a59fe"
    android:gravity="right"
    android:orientation="horizontal"
    android:paddingStart="14dp"
    android:paddingTop="11dp"
    android:paddingEnd="14dp"
    android:paddingBottom="11dp"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="מידע נוסף"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etAdditionalInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center"
            android:hint="טקסט חופשי"
            android:textColor="@color/black"
            android:textColorHint="#b3b3b3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="12dp">

        <EditText
            android:id="@+id/etPricePer60m"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_text_style"
            android:gravity="center"
            android:hint="00₪"
            android:inputType="number"
            android:textColor="#ff3817"
            android:textColorHint="#b3b3b3"
            android:textIsSelectable="false" />

        <EditText
            android:id="@+id/etPricePer40m"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:layout_marginVertical="7dp"
            android:background="@drawable/edit_text_style"
            android:gravity="center"
            android:hint="00₪"
            android:inputType="number"
            android:textColor="#ff3817"
            android:textColorHint="#b3b3b3"
            android:textIsSelectable="false" />

        <CheckBox
            android:id="@+id/cbFreeFirstLesson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#fff"
            android:buttonTint="#ff3817" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="58dp"
        android:layout_height="130dp"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center"
            android:paddingRight="20dp"
            android:text="מחיר ל60 דק"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center"
            android:paddingRight="20dp"
            android:text="מחיר ל40 דק"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center"
            android:paddingRight="20dp"
            android:text="שיעור ראשון חינם"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>